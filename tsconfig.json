{
  "compilerOptions": {
    // 基本設定
    "target": "es6",                          // モダンブラウザをターゲット
    "module": "ES2020",                          // ESモジュール形式
    "lib": ["ES2020", "DOM", "DOM.Iterable"],    // ブラウザAPI + モダンJS機能
    "moduleResolution": "node",                  // Node.js風のモジュール解決
    
    // 出力設定
    "outDir": "./dist",                          // 出力ディレクトリ
    "rootDir": "./src",                          // ソースディレクトリ
    "removeComments": true,                      // コメントを削除
    "declaration": true,                         // 型定義ファイル(.d.ts)を生成
    "declarationMap": true,                      // 型定義ファイルのソースマップ
    "sourceMap": true,                           // ソースマップを生成
    
    // 型チェック設定
    "strict": true,                              // 厳格な型チェック
    "noImplicitAny": true,                       // any型の暗黙的使用を禁止
    // "strictNullChecks": true,                    // null/undefinedの厳格チェック
    "strictFunctionTypes": true,                 // 関数型の厳格チェック
    "strictBindCallApply": true,                 // bind/call/applyの厳格チェック
    "strictPropertyInitialization": true,       // プロパティ初期化の厳格チェック
    "noImplicitReturns": true,                   // 暗黙的returnの禁止
    "noFallthroughCasesInSwitch": true,         // switch文のfall-through禁止
    "noUncheckedIndexedAccess": true,           // インデックスアクセスの厳格チェック
    
    // エラーチェック強化
    // "noUnusedLocals": true,                      // 未使用ローカル変数の検出
    // "noUnusedParameters": true,                  // 未使用パラメータの検出
    // "exactOptionalPropertyTypes": true,          // オプショナルプロパティの厳格チェック
    // "noImplicitOverride": true,                  // オーバーライド時のexplicit指定
    
    // モジュール設定
    "esModuleInterop": true,                     // CommonJSとESモジュールの相互運用
    "allowSyntheticDefaultImports": true,        // デフォルトインポートの許可
    "forceConsistentCasingInFileNames": true,    // ファイル名の大文字小文字を厳格チェック
    "resolveJsonModule": true,                   // JSONファイルのインポート許可
    
    // 実験的機能
    "experimentalDecorators": true,              // デコレータの使用許可
    "emitDecoratorMetadata": true,               // デコレータメタデータの出力
    
    // その他
    "skipLibCheck": true,                        // ライブラリファイルの型チェックをスキップ
    "allowUnreachableCode": false,               // 到達不可能コードの禁止
    "allowUnusedLabels": false,                  // 未使用ラベルの禁止
    "preserveConstEnums": true,                  // const enumの保持
    
    // 出力制御
    "noEmitOnError": true,                       // エラー時は出力しない
    "incremental": true,                         // 増分コンパイル
    "tsBuildInfoFile": "./dist/.tsbuildinfo"     // ビルド情報ファイル
  },
  
  "include": [
    "src/**/*",                                  // srcディレクトリ以下のすべて
    "src/**/*.ts",                               // TypeScriptファイル
    "src/**/*.tsx"                               // TSXファイル（React使用時）
  ],
  
  "exclude": [
    "node_modules",                              // node_modules除外
    "dist",                                      // 出力ディレクトリ除外
    "**/*.spec.ts",                              // テストファイル除外
    "**/*.test.ts",                              // テストファイル除外
    "coverage"                                   // カバレッジディレクトリ除外
  ],
  
  "ts-node": {
    "esm": true,                                 // ESモジュール対応
    "experimentalSpecifierResolution": "node"    // Node.js風の解決
  },
  
  "compileOnSave": true                          // 保存時自動コンパイル（IDE設定）
}